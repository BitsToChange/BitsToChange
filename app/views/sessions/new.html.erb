<section>
  <h1>Log In</h1>
  <%= form_tag sessions_path do %>
    <fieldset>
      <div class="field">
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>
      </div>
      <div class="field">
        <%= label_tag :password %>
        <%= password_field_tag :password, params[:password] %>
      </div>
    </fieldset>
    <%= button_tag 'Log In' %>
  <% end %>
</section>
